---
import Layout from '../layouts/Layout.astro';
import { SkillsSection } from '../components/SkillsSection';
import AgentChip from '../components/AgentChip.astro';
import MCPChip from '../components/MCPChip.astro';
import skills from '../data/skills.json';
import agents from '../data/agents.json';
import mcpServers from '../data/mcp-servers.json';
---

<Layout>
  <div class="container">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <!-- Quick Start -->
        <div class="hero-actions">
          <div class="code-block">
            <span class="code-prompt">$</span>
            <code id="install-command">npx skills add microsoft/skills</code>
            <button class="copy-btn" id="copy-btn" title="Copy to clipboard" aria-label="Copy install command">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="9" y="9" width="13" height="13" rx="2" ry="2" />
                <path d="M5 15H4a2 2 0 01-2-2V4a2 2 0 012-2h9a2 2 0 012 2v1" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills Section with Filters -->
    <SkillsSection client:load skills={skills} />

    <!-- Plugins Section -->
    <section id="plugins" class="section">
      <h2 class="section-title">
        <span class="section-dot"></span>
        Plugins
      </h2>
      <div class="plugins-grid">
        <!-- GitHub Copilot for Azure -->
        <a href="https://github.com/microsoft/GitHub-Copilot-for-Azure" target="_blank" rel="noopener" class="doc-card">
          <span class="doc-icon">üîå</span>
          <div class="doc-content">
            <h3 class="doc-title">
              GitHub Copilot for Azure
              <svg class="external-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3" />
              </svg>
            </h3>
            <p class="doc-desc">Azure extension for GitHub Copilot ‚Äî infrastructure, deployment, and Azure services assistance</p>
          </div>
        </a>

        <!-- Awesome Copilot -->
        <a href="https://github.com/github/awesome-copilot" target="_blank" rel="noopener" class="doc-card">
          <span class="doc-icon">‚≠ê</span>
          <div class="doc-content">
            <h3 class="doc-title">
              Awesome Copilot
              <svg class="external-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3" />
              </svg>
            </h3>
            <p class="doc-desc">Curated list of skills, prompts, plugins, cookbooks, custom agents and more</p>
          </div>
        </a>
      </div>
    </section>

    <!-- Agents & MCP Section - Compact -->
    <section id="agents-mcp" class="section section-compact">
      <div class="compact-row">
        <h3 class="compact-title">
          <span class="section-dot"></span>
          Agents
        </h3>
        <div class="chips-container">
          {agents.map((agent) => (
            <AgentChip
              emoji={agent.emoji}
              name={agent.name}
              description={agent.description}
              skills={agent.skills}
              file={agent.file}
            />
          ))}
        </div>
      </div>
      
      <div class="compact-row">
        <h3 class="compact-title">
          <span class="section-dot"></span>
          MCP Servers
        </h3>
        <div class="chips-container">
          {mcpServers.map((server) => (
            <MCPChip
              emoji={server.emoji}
              name={server.name}
              description={server.description}
              category={server.category}
              url={server.url}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- Documentation Section -->
    <section id="documentation" class="section">
      <h2 class="section-title">
        <span class="section-dot"></span>
        Documentation
      </h2>
      <div class="docs-grid">
        <!-- llms.txt -->
        <a href="/skills/llms.txt" class="doc-card">
          <span class="doc-icon">üìÑ</span>
          <div class="doc-content">
            <h3 class="doc-title">llms.txt</h3>
            <p class="doc-desc">LLM-friendly documentation index</p>
          </div>
        </a>

        <!-- llms-full.txt -->
        <a href="/skills/llms-full.txt" class="doc-card">
          <span class="doc-icon">üìã</span>
          <div class="doc-content">
            <h3 class="doc-title">llms-full.txt</h3>
            <p class="doc-desc">Complete documentation with full content</p>
          </div>
        </a>

        <!-- Context7 -->
        <a href="https://context7.com/microsoft/skills?tab=skills" target="_blank" rel="noopener" class="doc-card">
          <span class="doc-icon">7Ô∏è‚É£</span>
          <div class="doc-content">
            <h3 class="doc-title">
              Browse on Context7
              <svg class="external-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3" />
              </svg>
            </h3>
            <p class="doc-desc">Indexed documentation with semantic search</p>
          </div>
        </a>

        <!-- AGENTS.md -->
        <a href="https://github.com/microsoft/skills/blob/main/AGENTS.md" target="_blank" rel="noopener" class="doc-card">
          <span class="doc-icon">ü§ñ</span>
          <div class="doc-content">
            <h3 class="doc-title">
              AGENTS.md Template
              <svg class="external-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3" />
              </svg>
            </h3>
            <p class="doc-desc">Configure agent behavior in your projects</p>
          </div>
        </a>

        <!-- Blog Post -->
        <a href="https://devblogs.microsoft.com/all-things-azure/context-driven-development-agent-skills-for-microsoft-foundry-and-azure/" target="_blank" rel="noopener" class="doc-card">
          <span class="doc-icon">üìù</span>
          <div class="doc-content">
            <h3 class="doc-title">
              Blog: Context-Driven Development
              <svg class="external-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3" />
              </svg>
            </h3>
            <p class="doc-desc">Learn about Agent Skills for Microsoft Foundry</p>
          </div>
        </a>
      </div>
    </section>
  </div>
</Layout>

<script>
  // Copy button functionality
  const copyBtn = document.getElementById('copy-btn');
  const installCommand = document.getElementById('install-command');
  
  copyBtn?.addEventListener('click', async () => {
    const text = installCommand?.textContent || '';
    try {
      await navigator.clipboard.writeText(text);
      copyBtn.innerHTML = `
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#22c55e" stroke-width="2">
          <polyline points="20 6 9 17 4 12" />
        </svg>
      `;
      setTimeout(() => {
        copyBtn.innerHTML = `
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="9" y="9" width="13" height="13" rx="2" ry="2" />
            <path d="M5 15H4a2 2 0 01-2-2V4a2 2 0 012-2h9a2 2 0 012 2v1" />
          </svg>
        `;
      }, 2000);
    } catch (e) {
      console.error('Failed to copy:', e);
    }
  });
</script>

<style>
  /* Section styles */
  .section {
    padding: var(--space-2xl) 0;
  }

  .section-compact {
    padding: var(--space-xl) 0;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--text-2xl);
    font-weight: 700;
    margin-bottom: var(--space-xl);
  }

  .section-dot {
    width: 8px;
    height: 8px;
    background: var(--accent);
    border-radius: 50%;
  }

  .section-placeholder {
    color: var(--text-muted);
    font-size: var(--text-base);
    font-style: italic;
    padding: var(--space-xl) 0;
  }

  /* Compact row layout for Agents & MCP */
  .compact-row {
    margin-bottom: var(--space-lg);
  }

  .compact-row:last-child {
    margin-bottom: 0;
  }

  .compact-title {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--text-secondary);
    margin: 0 0 var(--space-md) 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .compact-title .section-dot {
    width: 6px;
    height: 6px;
  }

  .chips-container {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  /* Hero Section - Compact, developer-focused */
  .hero {
    padding: var(--space-md) 0 var(--space-sm);
    text-align: center;
  }
  
  .hero-content {
    max-width: 640px;
    margin: 0 auto;
  }
  
  /* Hero Actions - Command + GitHub button */
  .hero-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }
  
  .code-block {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: rgba(255, 255, 255, 0.04);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-md);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
  }
  
  .code-prompt {
    color: var(--text-muted);
    user-select: none;
  }
  
  .code-block code {
    color: var(--text-primary);
  }
  
  .copy-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-xs);
    background: transparent;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }
  
  .copy-btn:hover {
    color: var(--text-primary);
    background: var(--bg-tertiary);
  }
  
  @media (max-width: 600px) {
    .hero {
      padding: var(--space-md) 0 var(--space-sm);
    }
    
    .hero-content {
      padding: 0 var(--space-sm);
    }
    
    .hero-actions {
      width: 100%;
      gap: var(--space-sm);
    }
    
    .code-block {
      width: 100%;
      max-width: 100%;
      font-size: var(--text-xs);
      padding: var(--space-sm);
      justify-content: space-between;
      overflow-x: auto;
    }
    
    .code-block code {
      word-break: break-all;
      white-space: nowrap;
    }
  }

  /* Documentation Section */
  .docs-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-lg);
  }

  @media (max-width: 768px) {
    .docs-grid {
      grid-template-columns: minmax(0, 1fr);
    }
  }

  /* Plugins Section */
  .plugins-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
  }

  @media (max-width: 768px) {
    .plugins-grid {
      grid-template-columns: 1fr;
    }
  }

  .doc-card {
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all var(--transition-base);
    min-height: 100px;
  }

  .doc-card:hover {
    background: var(--bg-card-hover);
    border-color: var(--border-hover);
    box-shadow: 0 0 24px var(--accent-glow);
    transform: translateY(-2px);
  }

  .doc-icon {
    font-size: var(--text-2xl);
    flex-shrink: 0;
    line-height: 1;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .doc-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    min-width: 0;
  }

  .doc-title {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
  }

  .doc-desc {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  .doc-secondary {
    font-size: var(--text-xs);
    color: var(--text-tertiary);
    margin-top: var(--space-xs);
  }

  .doc-link-inline {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .doc-link-inline:hover {
    color: var(--accent-hover);
  }

  .external-icon {
    width: 14px;
    height: 14px;
    flex-shrink: 0;
    opacity: 0.6;
  }

  .doc-card:hover .external-icon {
    opacity: 1;
  }
</style>
